					<div class="card-body">
						<table id="myTable" class="table table-responsive-sm table-bordered table-striped table-sm">
								<thead>
									<tr>
										<th>Resort Name</th>
										<th>Location</th>
										<th>Date</th>
										<th>Status</th>
										<th>Rate Per Day</th>
										<th>Location</th>
